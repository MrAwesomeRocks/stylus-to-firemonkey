{
  "name": "stylus-to-firemonkey",
  "version": "0.0.0",
  "private": true,
  "description": "A Github Action for converting Stylus scripts into ones that can be used by Firemonkey.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "pnpm run build && npm-run-all --parallel format lint package test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrAwesomeRocks/stylus-to-firemonkey.git"
  },
  "keywords": [
    "github",
    "actions",
    "node",
    "stylus",
    "firemonkey"
  ],
  "author": "Nino Maruszewski",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@actions/artifact": "^0.5.1",
    "@actions/core": "^1.3.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.4.3",
    "@typescript-eslint/parser": "^4.26.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.3",
    "jest-circus": "^27.0.3",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  }
}
